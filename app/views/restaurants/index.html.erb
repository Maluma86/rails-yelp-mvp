<h1>Restaurants</h1>
<div class="row">
  <% @restaurants.each do |r| %>
    <div class="col-md-4 mb-3">
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%= r.name %></h5>
          <p class="card-text"><%= r.category.capitalize %></p>
          <%= link_to "Details", restaurant_path(r), class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>
